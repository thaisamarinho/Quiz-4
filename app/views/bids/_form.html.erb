<%= @bid.errors.full_messages.join(', ')%>
<%= form_for @bid, url: auction_bids_path(@auction), html: {class: 'form-inline'}, remote: true do |b| %>
  <div class="form-group">
    <%= b.text_field :price %>
  </div>
  <div class="form-group">
    <%= b.submit 'Bid', class: 'btn btn-default'  %>
  </div>
<%end%>
