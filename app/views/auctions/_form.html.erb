<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <%= form_for @auction do |a| %>
      <div class="form-group">
        <%= a.label :title %>
        <%= a.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= a.label :description %>
        <%= a.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= a.label 'Ends on' %>
        <%= a.text_field :ends_on, class: 'form-control datepicker' %>
      </div>
      <div class="form-group">
        <%= a.label :reserve_price %>
        <%= a.text_field :reserve_price, class: 'form-control' %>
      </div>
      <%= a.submit %>
    <% end %>
  </div>
</div>
